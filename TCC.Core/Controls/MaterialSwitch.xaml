<UserControl x:Class="TCC.Controls.MaterialSwitch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TCC.Controls"
             mc:Ignorable="d" Loaded="UserControl_Loaded"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Grid.Column="1" VerticalAlignment="Center" Width="50" Height="50" Margin="0,0,0,0" Cursor="Hand">
        <Rectangle x:Name="switchBack" Width="40" Height="14" RadiusX="7" RadiusY="7" Fill="Black" Opacity=".35">
        </Rectangle>
        <Ellipse x:Name="switchHead" Fill="{StaticResource bgColor}" HorizontalAlignment="Center" Width="20" Height="20" Margin="-20,0,0,0">
            <Ellipse.Effect>
                <DropShadowEffect ShadowDepth="2" Opacity=".55" BlurRadius="6"/>
            </Ellipse.Effect>
        </Ellipse>
    </Grid>
</UserControl>
