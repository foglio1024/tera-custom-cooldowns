        <Border.Effect>
            <DropShadowEffect ShadowDepth="1" BlurRadius="3" Opacity=".3"/>
        </Border.Effect>
        <Border.RenderTransform>
            <TranslateTransform Y="0"/>
        </Border.RenderTransform>
    </Border>

</UserControl>
