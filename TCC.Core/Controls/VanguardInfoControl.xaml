                    <Rectangle x:Name="creditsRect" Height="2" Width="{Binding ActualWidth, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Grid}}}" Fill="Orange"  HorizontalAlignment="Left">
