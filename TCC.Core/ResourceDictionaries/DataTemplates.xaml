<ResourceDictionary x:Class="TCC.ResourceDictionaries.DataTemplates"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
                    xmlns:controls="clr-namespace:Nostrum.Controls;assembly=Nostrum"
                    xmlns:nsConv="clr-namespace:Nostrum.Converters;assembly=Nostrum"
                    xmlns:extensions="clr-namespace:Nostrum.Extensions;assembly=Nostrum"
                    xmlns:system="clr-namespace:System;assembly=mscorlib"
                    xmlns:data="clr-namespace:TCC.Data"
                    xmlns:abnormalities="clr-namespace:TCC.Data.Abnormalities"
                    xmlns:chat="clr-namespace:TCC.Data.Chat"
                    xmlns:pc="clr-namespace:TCC.Data.Pc"
                    xmlns:skills="clr-namespace:TCC.Data.Skills"
                    xmlns:mg="clr-namespace:TCC.Interop.Moongourd"
                    xmlns:abnormalities1="clr-namespace:TCC.UI.Controls.Abnormalities"
                    xmlns:chat1="clr-namespace:TCC.UI.Controls.Chat"
                    xmlns:dashboard="clr-namespace:TCC.UI.Controls.Dashboard"
                    xmlns:group="clr-namespace:TCC.UI.Controls.Group"
                    xmlns:npCs="clr-namespace:TCC.UI.Controls.NPCs"
                    xmlns:settings="clr-namespace:TCC.UI.Controls.Settings"
                    xmlns:skills1="clr-namespace:TCC.UI.Controls.Skills"
                    xmlns:windows="clr-namespace:TCC.UI.Windows"
                    xmlns:widgets="clr-namespace:TCC.UI.Windows.Widgets"
                    xmlns:vm="clr-namespace:TCC.ViewModels">
    <!--#region Skills -->
    <DataTemplate x:Key="RoundNormalSkill">
        <skills1:RoundSkillControl />
    </DataTemplate>
    <DataTemplate x:Key="SquareNormalSkill">
        <skills1:SquareSkillControl />
    </DataTemplate>
    <DataTemplate x:Key="RoundFixedSkill">
        <skills1:RoundFixedSkillControl />
    </DataTemplate>
    <DataTemplate x:Key="SquareFixedSkill">
        <skills1:SquareFixedSkillControl />
    </DataTemplate>
    <DataTemplate x:Key="SkillDataTemplate" DataType="skills:Skill">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Ellipse Width="30" Height="{Binding ElementName=icon, Path=ActualWidth}" x:Name="icon"
                     Stroke="#7fff"
                     StrokeThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Ellipse.Fill>
                    <ImageBrush
                        ImageSource="{Binding IconName, Converter={StaticResource IconNameToPath}}" />
                </Ellipse.Fill>
            </Ellipse>
            <TextBlock Grid.Column="1" Foreground="#9fff" Text="{Binding ShortName}"
                       VerticalAlignment="Center" Margin="5 0" />
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="FixedSkillDataTemplateForConfig" DataType="skills:Cooldown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Ellipse Width="30" Height="{Binding ElementName=icon, Path=ActualWidth}" x:Name="icon"
                     Stroke="#7fff"
                     StrokeThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Ellipse.Fill>
                    <ImageBrush
                        ImageSource="{Binding Skill.IconName, Converter={StaticResource IconNameToPath}}" />
                </Ellipse.Fill>
            </Ellipse>
            <TextBlock Grid.Column="1" Foreground="#9fff" Text="{Binding Skill.ShortName}"
                       VerticalAlignment="Center" Margin="5 0" />
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="FixedCooldownTemplate">
        <skills1:FixedSkillContainers />
    </DataTemplate>
    <DataTemplate x:Key="NormalCooldownTemplate">
        <skills1:NormalSkillContainer />
    </DataTemplate>

    <!--#endregion-->

    <!--#region Abnormalities -->
    <DataTemplate x:Key="SquareAbnormality">
        <abnormalities1:SquareAbnormalityIndicator HorizontalAlignment="Right" Size="32">
            <abnormalities1:SquareAbnormalityIndicator.Resources>
                <Style TargetType="{x:Type Path}">
                    <Setter Property="FlowDirection" Value="RightToLeft" />
                </Style>
            </abnormalities1:SquareAbnormalityIndicator.Resources>
        </abnormalities1:SquareAbnormalityIndicator>
    </DataTemplate>
    <DataTemplate x:Key="RoundAbnormality">
        <abnormalities1:RoundAbnormalityIndicator HorizontalAlignment="Right" Size="32">
            <abnormalities1:RoundAbnormalityIndicator.Resources>
                <Style TargetType="{x:Type Path}">
                    <Setter Property="FlowDirection" Value="RightToLeft" />
                </Style>
            </abnormalities1:RoundAbnormalityIndicator.Resources>
        </abnormalities1:RoundAbnormalityIndicator>
    </DataTemplate>
    <DataTemplate x:Key="RoundPartyAbnormality">
        <abnormalities1:RoundAbnormalityIndicator Size="28" DataContext="{Binding}" />
    </DataTemplate>
    <DataTemplate x:Key="SquarePartyAbnormality">
        <abnormalities1:SquareAbnormalityIndicator Size="28" DataContext="{Binding}" />
    </DataTemplate>
    <DataTemplate x:Key="RoundRaidAbnormality">
        <abnormalities1:RoundAbnormalityIndicator Size="20" DataContext="{Binding}" />
    </DataTemplate>
    <DataTemplate x:Key="SquareRaidAbnormality">
        <abnormalities1:SquareAbnormalityIndicator Size="20" DataContext="{Binding}" />
    </DataTemplate>
    <DataTemplate x:Key="RoundBossAbnormality">
        <abnormalities1:RoundAbnormalityIndicator Size="30" Margin="2" DataContext="{Binding}" />
    </DataTemplate>
    <DataTemplate x:Key="SquareBossAbnormality">
        <abnormalities1:SquareAbnormalityIndicator Size="30" Margin="2" DataContext="{Binding}" />
    </DataTemplate>
    <DataTemplate x:Key="AbnormalityDataTemplate" DataType="abnormalities:Abnormality">
        <Grid Background="Transparent" ToolTip="{Binding ToolTip}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Ellipse Width="30" Height="{Binding ElementName=icon, Path=ActualWidth}" x:Name="icon"
                     Stroke="#7fff"
                     StrokeThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Ellipse.Fill>
                    <ImageBrush
                        ImageSource="{Binding IconName, Converter={StaticResource IconNameToPath}}" />
                </Ellipse.Fill>
            </Ellipse>
            <TextBlock Grid.Column="1" Foreground="#9fff" Text="{Binding Name}"
                       VerticalAlignment="Center" Margin="5 0" />
            <TextBlock Grid.Column="2" Foreground="#3fff" Text="{Binding Id}"
                       VerticalAlignment="Center" Margin="5 0" />
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="GroupAbnormalitySelectorDataTemplate" DataType="vm:GroupAbnormalityVM">
        <Grid Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="310" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="450" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.ToolTip>
                <ToolTip Background="Transparent" BorderBrush="Transparent">
                    <Grid>
                        <abnormalities1:AbnormalityToolTipControl AbnormalityName="{Binding Abnormality.Name}"
                                                                  AbnormalityToolTip="{Binding Abnormality.ToolTip}"
                                                                  Id="{Binding Abnormality.Id}" />
                    </Grid>
                </ToolTip>
            </Grid.ToolTip>
            <Ellipse Width="40" Height="{Binding ElementName=icon, Path=ActualWidth}" x:Name="icon"
                     Stroke="#7fff"
                     StrokeThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Ellipse.Fill>
                    <ImageBrush
                        ImageSource="{Binding Abnormality.IconName, Converter={StaticResource IconNameToPath}}" />
                </Ellipse.Fill>
            </Ellipse>
            <TextBlock Grid.Column="1" Foreground="#9fff" Text="{Binding Abnormality.Name}"
                       VerticalAlignment="Center" Margin="5 0" />
            <ItemsControl ItemsSource="{Binding Classes}" Grid.Column="3"
                          IsEnabled="{Binding DC.ShowAll, RelativeSource={RelativeSource AncestorType=windows:GroupAbnormalConfigWindow}, Converter={StaticResource BoolInverter}}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="1" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Command="{Binding ToggleCommand}" Width="30" HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Style="{StaticResource ButtonContentOpacityStyle}">
                            <Path Data="{StaticResource SvgCheckCircle}" Fill="#666"
                                  Stretch="Uniform" Height="16" Width="16" VerticalAlignment="Center"
                                  HorizontalAlignment="Center"
                                  x:Name="btnContent" />
                        </Button>
                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding Selected}" Value="True">
                                <Setter TargetName="btnContent" Property="Fill"
                                        Value="{StaticResource TccNormalGradientBrush}" />
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.Style>
                    <Style TargetType="ItemsControl">
                        <Style.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value=".5" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ItemsControl.Style>

            </ItemsControl>
            <Button Width="30" HorizontalContentAlignment="Center" Command="{Binding HiddenCommand}"
                    VerticalContentAlignment="Center" Grid.Column="2"
                    ToolTip="Hidden buffs are displayed only when mouse hovers buff window.">
                <Path Data="{StaticResource SvgHide}"
                      Stretch="Uniform" Height="16" Width="16" VerticalAlignment="Center"
                      HorizontalAlignment="Center">
                    <Path.Style>
                        <Style BasedOn="{StaticResource {x:Type Path}}" TargetType="Path">
                            <Setter Property="Fill" Value="#666" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Hidden}" Value="True">
                                    <Setter Property="Fill" Value="{StaticResource HpBrush}" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Path.Style>
                </Path>
                <Button.Style>
                    <Style BasedOn="{StaticResource ButtonContentOpacityStyle}" TargetType="Button">
                        <Setter Property="Opacity" Value=".2" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Hidden}" Value="True">
                                <Setter Property="Opacity" Value="1" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <TextBlock Grid.Column="4" Foreground="#3fff" Text="{Binding Abnormality.Id}"
                       VerticalAlignment="Center" Margin="5 0" HorizontalAlignment="Right" />
        </Grid>
    </DataTemplate>
    <!--Add My Abnormals Setting by HQ========-->
    <DataTemplate x:Key="MyAbnormalitySelectorDataTemplate" DataType="vm:MyAbnormalityVM">
        <Grid Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="310" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="450" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.ToolTip>
                <ToolTip Background="Transparent" BorderBrush="Transparent">
                    <Grid>
                        <abnormalities1:AbnormalityToolTipControl AbnormalityName="{Binding Abnormality.Name}"
                                                                  AbnormalityToolTip="{Binding Abnormality.ToolTip}"
                                                                  Id="{Binding Abnormality.Id}" />
                    </Grid>
                </ToolTip>
            </Grid.ToolTip>
            <Ellipse Width="40" Height="{Binding ElementName=icon, Path=ActualWidth}" x:Name="icon"
                     Stroke="#7fff" Margin="0 2"
                     StrokeThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Ellipse.Fill>
                    <ImageBrush
                        ImageSource="{Binding Abnormality.IconName, Converter={StaticResource IconNameToPath}}" />
                </Ellipse.Fill>
            </Ellipse>
            <TextBlock Grid.Column="1" Foreground="#9fff" Text="{Binding Abnormality.Name}"
                       VerticalAlignment="Center" Margin="5 0" />
            <ItemsControl ItemsSource="{Binding Classes}" Grid.Column="4"
                          IsEnabled="{Binding DC.ShowAll, RelativeSource={RelativeSource AncestorType=windows:MyAbnormalConfigWindow}, Converter={StaticResource BoolInverter}}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="1" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Command="{Binding MyToggleCommand}" Width="30" HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Style="{StaticResource ButtonContentOpacityStyle}">
                            <Path Data="{StaticResource SvgCheckCircle}" Fill="#666"
                                  Stretch="Uniform" Height="16" Width="16" VerticalAlignment="Center"
                                  HorizontalAlignment="Center"
                                  x:Name="btnContent" />
                        </Button>
                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding Selected}" Value="True">
                                <Setter TargetName="btnContent" Property="Fill"
                                        Value="{StaticResource TccNormalGradientBrush}" />
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.Style>
                    <Style TargetType="ItemsControl">
                        <Style.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value=".5" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ItemsControl.Style>

            </ItemsControl>
            <Button Width="30" HorizontalContentAlignment="Center" Command="{Binding SpecialCommand}"
                    Visibility="{Binding CanBeSpecial, Converter={nsConv:BoolToVisibility Mode=Hidden}}"
                    VerticalContentAlignment="Center" Grid.Column="3"
                    ToolTip="Special buffs are displayed at the beginning of the list and have gold border.">
                <Path Data="{StaticResource SvgStar}"
                      Stretch="Uniform" Height="16" Width="16" VerticalAlignment="Center"
                      HorizontalAlignment="Center">
                    <Path.Style>
                        <Style BasedOn="{StaticResource {x:Type Path}}" TargetType="Path">
                            <Setter Property="Fill" Value="#666" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Special}" Value="True">
                                    <Setter Property="Fill" Value="Orange" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Path.Style>
                </Path>
                <Button.Style>
                    <Style BasedOn="{StaticResource ButtonContentOpacityStyle}" TargetType="Button">
                        <Setter Property="Opacity" Value=".2" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Special}" Value="True">
                                <Setter Property="Opacity" Value="1" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Width="30" HorizontalContentAlignment="Center" Command="{Binding HiddenCommand}"
                    VerticalContentAlignment="Center" Grid.Column="2"
                    ToolTip="Hidden buffs are displayed only when mouse hovers buff window.">
                <Path Data="{StaticResource SvgHide}"
                      Stretch="Uniform" Height="16" Width="16" VerticalAlignment="Center"
                      HorizontalAlignment="Center">
                    <Path.Style>
                        <Style BasedOn="{StaticResource {x:Type Path}}" TargetType="Path">
                            <Setter Property="Fill" Value="#666" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Hidden}" Value="True">
                                    <Setter Property="Fill" Value="{StaticResource HpBrush}" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Path.Style>
                </Path>
                <Button.Style>
                    <Style BasedOn="{StaticResource ButtonContentOpacityStyle}" TargetType="Button">
                        <Setter Property="Opacity" Value=".2" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Hidden}" Value="True">
                                <Setter Property="Opacity" Value="1" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <TextBlock Grid.Column="5" Foreground="#3fff" Text="{Binding Abnormality.Id}"
                       VerticalAlignment="Center" Margin="5 0" HorizontalAlignment="Right" />
        </Grid>
    </DataTemplate>
    <!--======================================-->
    <!--#endregion-->

    <!--#region Chat -->
    <DataTemplate x:Key="SimpleTemplate" DataType="chat:SimpleMessagePiece">
        <Grid UseLayoutRounding="True">
            <TextBlock Foreground="{Binding Color, Converter={StaticResource StringToFill}}"
                       Text="{Binding Text}"
                       FontSize="{Binding Size}"
                       FontFamily="{StaticResource NotoSansMed}"
                       TextWrapping="Wrap"
                       FontWeight="Normal"
                       Opacity="1"
                       Width="Auto"
                       HorizontalAlignment="Stretch"
                       TextTrimming="None" />
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="ClickableTemplate" DataType="chat:MessagePieceBase">
        <Grid UseLayoutRounding="True">
            <Border BorderBrush="{Binding Color, Converter={StaticResource StringToFill}}"
                    Visibility="{Binding IsHovered, Converter={nsConv:BoolToVisibility}}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    BorderThickness="0 0 0 2" />
            <TextBlock Foreground="{Binding Color, Converter={StaticResource StringToFill}}"
                       Text="{Binding Text}"
                       Cursor="Hand"
                       FontSize="{Binding Size}"
                       FontFamily="{StaticResource NotoSansMed}"
                       TextWrapping="Wrap"
                       FontWeight="Normal"
                       Opacity="1"
                       Width="Auto"
                       HorizontalAlignment="Stretch"
                       TextTrimming="None" />
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="MoneyTemplate">
        <chat1:MoneyMessagePieceControl />
    </DataTemplate>
    <DataTemplate x:Key="EmojiTemplate">
        <chat1:EmojiMessagePiece />
    </DataTemplate>
    <DataTemplate x:Key="IconTemplate" DataType="chat:IconMessagePiece">
        <Ellipse Width="24" Height="24" Margin="0 0 3 0" VerticalAlignment="Center">
            <Ellipse.Fill>
                <ImageBrush ImageSource="{Binding Text, Converter={StaticResource MessageTextToIcon}}" />
            </Ellipse.Fill>
        </Ellipse>

        <!--<Image RenderOptions.BitmapScalingMode="HighQuality" 
