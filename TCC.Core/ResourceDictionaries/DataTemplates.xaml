    <DataTemplate x:Key="SimpleChatChannelTemplate" DataType="chat:ChatChannelOnOff">
        <Grid ToolTip="{Binding Channel}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
