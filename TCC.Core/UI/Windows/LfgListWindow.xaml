                                VerticalAlignment="Bottom">
                            <FrameworkElement Width="{Binding ElementName=PublicizeBtn, Path=ActualWidth}"
                                              x:Name="PublicizeBarGovernor">
                                <FrameworkElement.LayoutTransform>
                                    <ScaleTransform ScaleX="0" />
                                </FrameworkElement.LayoutTransform>
