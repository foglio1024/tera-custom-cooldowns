                <FrameworkElement.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="45" />
                    </TransformGroup>
                </FrameworkElement.RenderTransform>
            </Border>

            <skills:RhombSkillEffectControl DataContext="{Binding Vow}" IsHitTestVisible="False"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch" />
        </Grid>

